  {
    "name": "Email Pop-up",
    "settings": [
      {
        "type": "checkbox",
        "id": "email_pop_up_active",
        "label": "Email Pop-up Activation",
        "info": "This turns on\/off the email pop-up on the site"
      },
      {
        "type": "text",
        "id": "email_popup_headline",
        "label": "The headline for the pop-up",
        "default": "Lorem Ipsum"
      },
      {
        "type": "text",
        "id": "email_popup_body",
        "label": "The body copy for the pop-up",
        "default": "Lorem ipsum dolor sit amet."
      },
      {
        "type": "text",
        "id": "email_popup_button_cta",
        "label": "The text inside the button to sign up",
        "default": "Submit"
      },
      {
        "type": "richtext",
        "id": "email_popup_secondary_body",
        "label": "Any secondary text below the button cta",
        "default": "<p>By signing up and clicking ‘Continue,’ you agree to receive recurring marketing and automated promotional and personalized messages sent via email from Ajornada at the email used when signing up, and in accordance with the Terms of Use and the Privacy Policy<\/p>"
      },
      {
        "type": "image_picker",
        "id": "email_popup_image_small",
        "label": "The image that will appear on small devices"
      },
      {
        "type": "image_picker",
        "id": "email_popup_image_large",
        "label": "The image that will appear on larger devices"
      },
      {
        "type": "select",
        "id": "email_pop_up_frequency",
        "label": "How often do you wan to show the pop-up?",
        "options": [
          {
            "group": "frequency",
            "value": "first-timers-only",
            "label": "First Time Visitors Only"
          },
          {
            "group": "frequency",
            "value": "everytime-site-loads",
            "label": "Everytime site loads"
          }
        ]
      },
      {
        "type": "number",
        "id": "email_pop_up_time_delay",
        "label": "Time Delay",
        "default": 0,
        "info": "The amount of seconds the pop up should wait after being triggered to display."
      }
    ]
  },
