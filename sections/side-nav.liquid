{{ 'section-side-nav.css' | asset_url | stylesheet_tag }}
{{ 'side-nav.js' | asset_url | script_tag }}
{% if section.settings.enable_side_nav %}
  <div class="side-nav-wrapper ">
    <div class="page-width">
      <aside class="side-nav">
        <div class="">
          <nav>
            <ul id="side-nav-list" class="side-nav__list">
              <!-- Links will be generated here by JavaScript -->
            </ul>
          </nav>
        </div>
      </aside>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Page Side Navigation",
  "enabled_on": {
    "templates": ["page"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Side Navigation Settings"
    },
    {
      "type": "checkbox",
      "id": "enable_side_nav",
      "label": "Enable Side Navigation",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Page Side Nav"
    }
  ]
}
{% endschema %}
