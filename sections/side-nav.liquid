{{ 'section-side-nav.css' | asset_url | stylesheet_tag }}
{{ 'side-nav.js' | asset_url | script_tag }}

{% if section.settings.enable_side_nav %}
  <div class="side-nav-wrapper ">
    <div class="page-width">
      <aside class="side-nav">
        <nav>
          <ul id="side-nav-list" class="side-nav__list">
            <!-- Links will be generated here by JavaScript -->
          </ul>
        </nav>
      </aside>
    </div>
  </div>
{% endif %}

<script defer src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
<script defer src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>

{% schema %}
{
  "name": "Page Side Navigation",
  "enabled_on": {
    "templates": ["page"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Side Navigation Settings"
    },
    {
      "type": "checkbox",
      "id": "enable_side_nav",
      "label": "Enable Side Navigation",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Page Side Nav"
    }
  ]
}
{% endschema %}
