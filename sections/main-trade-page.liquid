{{ 'template-trade.css' | asset_url | stylesheet_tag }}
{{ 'component-trade-item-card.css' | asset_url | stylesheet_tag }}

<div class="main-trade-page page-width  section-{{ section.id }}-padding">
  <div class="main-trade-page__inner">
    {%- for block in section.blocks -%}
      {%- render 'trade-item-card', item: block.settings -%}
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Main Trade Page",
  "tag": "section",
  "templates": ["page"],
  "blocks": [
    {
      "type": "trade_item",
      "name": "Trade Item",
      "settings": [
        {
          "type": "image_picker",
          "label": "Image",
          "id": "image",
          "info": "Select the image that will be downloadable. "
        },
        {
          "type": "text",
          "label": "Item Title",
          "id": "headline",
          "default": "Enter Title",
          "info": "Enter the title for this downloadable trade item."
        }
      ]
    }
  ]
}
{% endschema %}
