<link rel="stylesheet" href="{{ 'section-blurb-section.css' | asset_url }}" media="print" onload="this.media='all'">

<section class="blurb-section {% if section.settings.top_border == 'yes' %}has-top-border{% endif %} {% if section.settings.bottom_border == 'yes' %}has-bottom-border{% endif %}">
  <div class="blurb-section__inner">
    <div class="blurb-section__image-container">
      <div class="blurb-section__image">
        <img
          srcset="
            {%- if section.settings.image.width >= 165 -%}{{ section.settings.image | image_url: width: 165 }} 165w,{%- endif -%}
            {%- if section.settings.image.width >= 360 -%}{{ section.settings.image | image_url: width: 360 }} 360w,{%- endif -%}
            {%- if section.settings.image.width >= 533 -%}{{ section.settings.image | image_url: width: 533 }} 533w,{%- endif -%}
            {%- if section.settings.image.width >= 720 -%}{{ section.settings.image | image_url: width: 720 }} 720w,{%- endif -%}
            {%- if section.settings.image.width >= 800 -%}{{ section.settings.image | image_url: width: 800 }} 800w,{%- endif -%}
            {%- if section.settings.image.width >= 940 -%}{{ section.settings.image | image_url: width: 940 }} 940w,{%- endif -%}
            {%- if section.settings.image.width >= 1066 -%}{{ section.settings.image | image_url: width: 1066 }} 1066w,{%- endif -%}
            {{ section.settings.image | image_url }} {{ section.settings.image.width }}w
          "
          src="{{ section.settings.image | image_url: width: 533 }}"
          sizes="(min-width: 700px) 50vw, 90vw"
          alt="{{ section.settings.image.alt | escape }}"
          class="motion-reduce"
          loading="lazy"
          width="{{ section.settings.image.width }}"
          height="{{ section.settings.image.height }}"
        >
      </div>
    </div>
    <div class="blurb-section__copy">
      <div class="blurb-section__copy__inner">
        <h2 class="blurb-section__copy__heading">
          {{ section.settings.heading }}
        </h2>

        <div class="card">
          <div class="card__inner">
            <div class="card__heading">
              {{ section.settings.card_heading }}
            </div>
            <div class="card__description">
              {{ section.settings.card_description }}
            </div>
            {% if section.settings.card_cta_url != blank %}
              <div class="blurb-section__copy__body__cta">
                <a href="{{ section.settings.card_cta_url }}">
                  {{ section.settings.card_cta_text }}
                </a>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Blurb Section",
  "enabled_on": {
    "templates": ["index", "page"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Copy"
    },
    {
      "type": "richtext",
      "id": "heading",
      "label": "Section Heading"
    },
    {
      "type": "header",
      "content": "Card"
    },
    {
      "type": "richtext",
      "id": "card_heading",
      "label": "Card Heading"
    },
    {
      "type": "richtext",
      "id": "card_description",
      "label": "Card Description"
    },
    {
      "type": "url",
      "id": "card_cta_url",
      "label": "Card CTA URL"
    },
    {
      "type": "text",
      "id": "card_cta_text",
      "label": "Card CTA Text"
    },

    {
      "type": "image_picker",
      "id": "image",
      "label": "Section Image"
    },
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "radio",
      "id": "section-alignment",
      "label": "Section Order on Desktop",
      "options": [
        {
          "value": "normal",
          "label": "Image on Left"
        },
        {
          "value": "flipped",
          "label": "Image on Right"
        }
      ],
      "default": "normal"
    },
    {
      "type": "select",
      "id": "copy-bg-color",
      "label": "Copy Background Color",
      "options": [
        {
          "value": "background-1",
          "label": "Bakground 1"
        },
        {
          "value": "background-2",
          "label": "Bakground 2"
        },
        {
          "value": "background-3",
          "label": "Bakground 3"
        }
      ],
      "default": "background-1"
    },
    {
      "type": "header",
      "content": "Border Elements"
    }
  ],
  "presets": [
    {
      "name": "Blurb Section"
    }
  ]
}
{% endschema %}
