{{ 'section-collection-description.css' | asset_url | stylesheet_tag }}

<collection-description>
  <section class="collection-description" id="main-collection-description">
    <div class="collection-description__inner page-width">
      <div class="container">
        <h2 class="collection-description__heading">
          {{ collection.title }}
        </h2>
        <div class="collection-description__body rich-text ">
          <span data-seo-text>
            {{ collection.description }}
          </span>
        </div>
      </div>
    </div>
  </section>
</collection-description>

<script src="{{ 'collection-description.js' | asset_url  }}" defer="defer"></script>

{% schema %}
{
  "name": "Collection Description",
  "enabled_on": {
    "templates": ["collection", "page"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Headline Here"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Your rich text description here.</p>"
    }
  ],
  "presets": [
    {
      "name": "Main Collection Description"
    }
  ]
}
{% endschema %}
