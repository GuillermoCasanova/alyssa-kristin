<div class="dress-options-list">
  <div class="dress-options-list__tops">
    <h3>Tops</h3>
    <ul>
      {% for product in section.settings.collection.products %}
        <li>
          <img src="{{ product.metafields.dress.top | img_url: 'small' }}" alt="{{ product.title }} top">
          <span>{{ product.title }} Top</span>
        </li>
      {% endfor %}
    </ul>
  </div>
  <div class="dress-options-list__bottoms">
    <h3>Bottoms</h3>
    <ul>
      {% for product in section.settings.collection.products %}
        <li>
          <img src="{{ product.metafields.dress.bottom | img_url: 'small' }}" alt="{{ product.title }} bottom">
          <span>{{ product.title }} Bottom</span>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>

{% schema %}
{
  "name": "Dress Options List",
  "enabled_on": {
    "templates": ["page"]
  },
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    }
  ],
  "presets": [
    {
      "name": "Dress Options List"
    }
  ]
}
{% endschema %}
