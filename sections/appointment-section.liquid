{{ 'section-appointments.css' | asset_url | stylesheet_tag }}

<section>
  <div class="appointment-section">
    <div class="appointment-section__inner">
      <div class="">
        <div class="appointment-section__image">
          <div class="apppointment-section__image__innner">
            {% if section.settings.image != blank %}
              <img
                srcset="
                  {%- if section.settings.image.width >= 165 -%}{{ section.settings.image | image_url: width: 165 }} 165w,{%- endif -%}
                  {%- if section.settings.image.width >= 360 -%}{{ section.settings.image | image_url: width: 360 }} 360w,{%- endif -%}
                  {%- if section.settings.image.width >= 533 -%}{{ section.settings.image | image_url: width: 533 }} 533w,{%- endif -%}
                  {%- if section.settings.image.width >= 720 -%}{{ section.settings.image | image_url: width: 720 }} 720w,{%- endif -%}
                  {{ section.settings.image | image_url }} {{ section.settings.image.width }}w
                "
                src="{{ section.settings.image | image_url: width: 533 }}"
                sizes="(min-width: 940px) 30vw, 50vw"
                alt="{{ section.settings.alt_text | escape }}"
                class="motion-reduce responsive-image"
                loading="lazy"
                width="{{ section.settings.image.width }}"
                height="{{ section.settings.image.height }}"
              >
            {% endif %}
          </div>
        </div>
      </div>
      <div class="appointment-section__copy">
        <div class="page-width appointment-section__copy__inner">
          <h2 class="appointment-section__copy__heading">
            {{ section.settings.headline }}
          </h2>
          <div class="appointment-section__copy__body">
            <p>{{ section.settings.body_copy }}</p>
          </div>
          <div class="appointment-section__copy__cta">
            <a href="{{ section.settings.cta_link }}" class=" button button--medium  button--primary">
              {{- section.settings.cta_text -}}
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Appointment Section",
  "enabled_on": {
    "templates": ["index", "page"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image Alt Text"
    },
    {
      "type": "richtext",
      "id": "headline",
      "label": "Headline"
    },
    {
      "type": "richtext",
      "id": "body_copy",
      "label": "Body Copy"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Link"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text"
    }
  ],
  "presets": [
    {
      "name": "Appointment Section"
    }
  ]
}
{% endschema %}
