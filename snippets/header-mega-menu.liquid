{% comment %}
  Renders an off canvas menu for the header.

  Usage:
  {% render 'header-mega-menu' %}
{% endcomment %}

{%- if section.settings.menu != blank -%}
  <nav class="header__menu">
    <ul class="header__menu__list-menu " role="list">
      {%- for link in section.settings.menu.links -%}
        <li>
          {%- if link.links != blank -%}
            <header-menu>
              <details>
                <summary
                  class="header__menu-item  focus-inset"
                  id="#{{ link.title | escape }}"
                >
                  <span
                    {%- if link.child_active %}
                      class="header__active-menu-item"
                    {% endif %}
                  >
                    {{- link.title | escape -}}
                  </span>
                </summary>

                {% assign title = link.title | escape %}

                {% assign is_mega_menu = false %}
                {% for block in section.blocks %}
                  {% if block.type == 'mega-menu' and block.settings.top_level_link contains title %}
                    {% assign is_mega_menu = true %}
                    {% break %}
                  {% endif %}
                {% endfor %}

                {% if is_mega_menu %}
                  <div
                    class="header__mega-menu"
                    role="region"
                  >
                    <div class="header__mega-menu__inner page-width">
                      <div>
                        <span class="header__submenu__title">
                          {{- link.title | escape -}}
                        </span>
                        <ol class="header__submenu__list-menu   motion-reduce">
                          {%- for childlink in link.links -%}
                            <li>
                              {%- if childlink.links == blank -%}
                                <a
                                  href="{{ childlink.url }}"
                                  data-green-dot-cursor
                                  class="header__submenu__list-item    focus-inset {% if childlink.current %} header__submenu__list-item--active{% endif %}"
                                  {% if childlink.current %}
                                    aria-current="page"
                                  {% endif %}
                                >
                                  {{ childlink.title | escape }}
                                </a>
                              {%- else -%}
                                <div
                                  class="header__submenu__list-item  focus-inset"
                                  id="{{ childlink.title | escape }}"
                                >
                                  {{ childlink.title | escape }}
                                </div>
                                <div class="header__childmenu">
                                  <ul
                                    class="header__submenu__list-menu  header__childmenu__list-menu"
                                    aria-describedby="{{ childlink.title | escape }}"
                                  >
                                    {%- for grandchildlink in childlink.links -%}
                                      <li>
                                        <a
                                          href="{{ grandchildlink.url }}"
                                          data-green-dot-cursor
                                          class="header__submenu__list-item  header__childmenu__list-item focus-inset {% if grandchildlink.current %} list-menu__item--active{% endif %}"
                                          {% if grandchildlink.current %}
                                            aria-current="page"
                                          {% endif %}
                                        >
                                          {{ grandchildlink.title | escape }}
                                        </a>
                                      </li>
                                    {%- endfor -%}
                                  </ul>
                                </div>
                              {%- endif -%}
                            </li>
                          {%- endfor -%}
                        </ol>
                      </div>
                      <div class="header__mega-menu__promotions">
                        {% for block in section.blocks %}
                          {% if block.type == 'mega-menu' and block.settings.top_level_link contains title %}
                            {% if block.settings.promotion_1_image %}
                              <div class="header__mega-menu__promotion">
                                <img
                                  src="{{ block.settings.promotion_1_image | image_url }}"
                                  alt="{{ block.settings.promotion_1_text }}"
                                >
                                <a href="{{ block.settings.promotion_1_url }}">{{ block.settings.promotion_1_text }}</a>
                              </div>
                            {% endif %}
                            {% if block.settings.promotion_2_image %}
                              <div class="header__mega-menu__promotion">
                                <img
                                  src="{{ block.settings.promotion_2_image | image_url }}"
                                  alt="{{ block.settings.promotion_2_text }}"
                                >
                                <a href="{{ block.settings.promotion_2_url }}">{{ block.settings.promotion_2_text }}</a>
                              </div>
                            {% endif %}
                            {% if block.settings.promotion_3_image %}
                              <div class="header__mega-menu__promotion">
                                <img
                                  src="{{ block.settings.promotion_3_image | image_url }}"
                                  alt="{{ block.settings.promotion_3_text }}"
                                >
                                <a href="{{ block.settings.promotion_3_url }}">{{ block.settings.promotion_3_text }}</a>
                              </div>
                            {% endif %}
                          {% endif %}
                        {% endfor %}
                      </div>
                    </div>
                  </div>
                {% else %}
                  <div
                    class="header__submenu"
                    role="region"
                    aria-labelledby="{{ link.title | escape }}"
                  >
                    <div class="header__submenu__inner  page-width">
                      <div>
                        <span class="header__submenu__title">
                          {{- link.title | escape -}}
                        </span>
                        <ol class="header__submenu__list-menu   motion-reduce">
                          {%- for childlink in link.links -%}
                            <li>
                              {%- if childlink.links == blank -%}
                                <a
                                  href="{{ childlink.url }}"
                                  data-green-dot-cursor
                                  class="header__submenu__list-item    focus-inset {% if childlink.current %} header__submenu__list-item--active{% endif %}"
                                  {% if childlink.current %}
                                    aria-current="page"
                                  {% endif %}
                                >
                                  {{ childlink.title | escape }}
                                </a>
                              {%- else -%}
                                <div
                                  class="header__submenu__list-item  focus-inset"
                                  id="{{ childlink.title | escape }}"
                                >
                                  {{ childlink.title | escape }}
                                </div>
                                <div class="header__childmenu">
                                  <ul
                                    class="header__submenu__list-menu  header__childmenu__list-menu"
                                    aria-describedby="{{ childlink.title | escape }}"
                                  >
                                    {%- for grandchildlink in childlink.links -%}
                                      <li>
                                        <a
                                          href="{{ grandchildlink.url }}"
                                          data-green-dot-cursor
                                          class="header__submenu__list-item  header__childmenu__list-item focus-inset {% if grandchildlink.current %} list-menu__item--active{% endif %}"
                                          {% if grandchildlink.current %}
                                            aria-current="page"
                                          {% endif %}
                                        >
                                          {{ grandchildlink.title | escape }}
                                        </a>
                                      </li>
                                    {%- endfor -%}
                                  </ul>
                                </div>
                              {%- endif -%}
                            </li>
                          {%- endfor -%}
                        </ol>
                      </div>
                      <div class="header__submenu__featured-links"></div>
                    </div>
                  </div>
                {% endif %}
              </details>
            </header-menu>
          {%- else -%}
            <a
              href="{{ link.url }}"
              class=" header__menu-item  focus-inset"
              {% if link.current %}
                aria-current="page"
              {% endif %}
            >
              <span
                {%- if link.current %}
                  class="header__active-menu-item"
                {% endif %}
              >
                {{- link.title | escape -}}
              </span>
            </a>
          {%- endif -%}
        </li>
      {%- endfor -%}
    </ul>
  </nav>
{%- endif -%}
